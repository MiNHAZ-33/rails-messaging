<%= link_to user, id:"#{user.id}" do %>
<!--  <div id="<%#= user.id %>" >-->
  <%#= seen_count > 0 ? "bg-sky-400": "" %>
      <div class="py-2 px-2 flex items-center hover:bg-background-color <%= seen_count > 0 ? "font-bold": "" %>" >
        <div class="h-[2.5rem] w-[2.5rem] relative">
        <div class="h-[2.5rem] w-[2.5rem] rounded-full overflow-hidden">
          <% if user.avatar.attached? %>
            <%= image_tag(url_for(user.avatar), class:"w-full h-full object-cover") %>
            <div class="h-[0.5rem] w-[0.5rem] <%= user.status ? "bg-[#2ac85e]" : "bg-gray-400"  %>  rounded-full"></div>
          <% else %>
            <%= image_tag("profile_avatar.jpg", class:"w-full h-full object-cover") %>
          <% end %>
        </div>
          <%= turbo_stream_from "sidebar_user_status" %>
          <%= render "users/sidebar_status", user: user %>

      </div>
      <div class="w-full px-2 truncate <%= seen_count > 0 ? "font-bold": "" %>">
        <div class="flex items-center justify-between ">
          <div>
            <%=  user.username %>

            <% if seen_count > 0 %>
              <div class="inline-block bg-green-200 h-[1.2rem] w-[1.2rem] rounded-full text-center">
                <span class="text-xs p-1">
                  <%= seen_count %>
                </span>
              </div>
            <% end %>
          </div>
          <span class="text-sm text-gray-700 "><%= last_message_date %></span>
        </div>
        <div class="truncate">
          <span class="text-sm <%= seen_count > 0 ? "font-bold": "font-light text-gray-600" %>  inline-block "><%= last_message %></span>
        </div>
      </div>
    </div>
<!--  </div>-->
<% end %>



