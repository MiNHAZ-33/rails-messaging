<div class="px-1 pb-1 msg-<%= message.sender_id %>-cont flex items-center">
    <div class="h-[1.5rem] w-[1.5rem] rounded-full overflow-hidden msg-<%= message.sender_id %>-avatar">
      <% if !Message.show_avatar(message) %>
       <%= image_tag(user_avatar(message.sender_id), class:"w-full h-full object-cover") %>
        <% else %>
      <div class="w-full h-full object-cover"></div>
      <% end %>
    </div>
    <div class="bg-white text-sm rounded-full px-3 py-2  msg-<%= message.sender_id %>-body max-w-80">
      <h3><%= message.body %></h3>
    </div>
</div>

