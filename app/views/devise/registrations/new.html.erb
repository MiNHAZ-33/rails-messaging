<div class="flex flex-col items-center justify-center">
  <h2 class="text-2xl font-semibold text-center ">Sign up</h2>
  <div class="flex flex-col items-center justify-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field pb-2">
        <%= f.label :email, class:"text-blue-950 text-lg" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border border-2 border-gray-200 rounded-lg" %>
      </div>

      <div class="field pb-2">
        <%= f.label :username, class:"text-blue-950 text-lg " %><br/>
        <%= f.text_field :username, class:"border border-2 border-gray-200 rounded-lg" %>
      </div>

      <div class="field pb-2">
        <%= f.label :password, class:"text-blue-950 text-lg" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"border border-2 border-gray-200 rounded-lg"  %>
      </div>

      <div class="field pb-2">
        <%= f.label :password_confirmation, class:"text-blue-950 text-lg " %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"border border-2 border-gray-200 rounded-lg"  %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up",  class:"bg-sky-200 rounded-lg py-2 w-full font-bold text-blue-950 text-center my-2"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>



